update following function first parameter to accept integer and character to add padding length of second parameter

CREATE FUNCTION PadOrTrim(IN val CHARACTER, IN targetLen INTEGER) RETURNS CHARACTER
	BEGIN
	    DECLARE outVal CHARACTER val;
	    DECLARE padLen INTEGER targetLen - LENGTH(val);
	
	    IF padLen > 0 THEN
	        -- Add padLen spaces
	        DECLARE i INTEGER 1;
	        WHILE i <= padLen DO
	            SET outVal = outVal || ' ';
	            SET i = i + 1;
	        END WHILE;
	    ELSEIF padLen < 0 THEN
	        -- Truncate if too long
	        SET outVal = SUBSTRING(val FROM 1 FOR targetLen);
	    END IF;
	
	    RETURN outVal;
	END;
