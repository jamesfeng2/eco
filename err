CREATE FUNCTION DecodeEBCDIC(inChar CHARACTER) RETURNS CHARACTER
BEGIN
    DECLARE ebcdicBlob BLOB;
    DECLARE txt CHARACTER;

    -- Serialize the CHARACTER as if it were EBCDIC 273
    SET ebcdicBlob = ASBITSTREAM(inChar
        OPTIONS RootBitStream
        ENCODING 273
        CCSID 273);

    -- Reinterpret it correctly as text
    SET txt = CAST(ebcdicBlob AS CHARACTER CCSID 273);

    RETURN txt;
END;
