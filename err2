<?xml version="1.0" encoding="UTF-8"?>
<policy xmlns="http://ibm.com/iib/policy"
        policyType="JDBCProviders"
        policyName="DSOM">
    <description>JDBC connection to SOM database</description>

    <properties>
        <property name="databaseName" value="SOMDB"/>
        <property name="type4DatasourceClassName" value="com.ibm.db2.jcc.DB2ConnectionPoolDataSource"/>
        <property name="connectionUrlFormat" value="jdbc:db2://mydbhost:50000/SOMDB"/>
        <property name="securityIdentity" value="SOM_DB_Credential"/>
    </properties>
</policy>
